<div class="hero is-fullheight form-page">
  <div class="columns">
    <div class="column signup">
      <h3 class="title has-text-centered">Sign In:</h3>
      <div class="card">
        <div class="card-content">
          <form action="/process-signup" method="POST">
            <div class="field">
              <label class="label">Full Name :</label>
              <div class="control has-icons-left">
                <input class="input" type="text" name="fullName" placeholder="John Doe" minlength="2" required />
                <span class="icon is-small is-left">
                  <i class="fas fa-user"></i>
                </span>
              </div>
              <p class="help">Required</p>
            </div>

            <div class="field">
              <label class="label">Email :</label>
              <div class="control has-icons-left">
                <input class="input" type="email" name="email" placeholder="John@doe.com" required>
                <span class="icon is-small is-left">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
              <p class="help">Required</p>
            </div>

            <div class="field">
              <label class="label">Password :</label>
              <div class="control has-icons-left">
                <input class="input" type="password" name="password" placeholder="Go for it..." required>
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
              <p class="help">Has to contain a digit [0-9]</p>
            </div>

            <div class="field">
              <label class="label">Sneak a pic ðŸ“¸</label>
              <div class="control">
                <input class="input" type="url" name="image" placeholder="Url of your photo !">
              </div>
            </div>
            <div class="field is-grouped is-grouped-right">
              <div class="control">
                <a class="button is-text" href="/">Cancel</a>
              </div>
              <div class="control">
                <button class="button is-link">Submit</button>
              </div>
            </div>
        </div>
        </form>
      </div>
    </div>

    <div class="column login">
      <h3 class="title has-text-centered">Log In:</h3>
      <div class="card">
        <div class="card-content">


          <form action="/process-login" method="POST">
            <div class="field">
              <label class="label">Email:</label>
              <div class="control has-icons-left">
                <input class="input" type="email" name="email" placeholder="John@doe.com" required />
                <span class="icon is-small is-left">
                  <i class="fas fa-envelope"></i>
                </span>
              </div>
            </div>

            <div class="field">
              <label class="label">Password:</label>
              <div class="control has-icons-left">
                <input class="input" type="password" name="password" placeholder="You know you know..." required>
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
              </div>
            </div>
            <br>
            <div class="field is-grouped is-grouped-right">
              <div class="control">
                <button class="button is-link">Log In</button>
              </div>
            </div>
        </div>
        </form>
      </div>
      <br>
      <div class="content center" style="flex-direction: column;">
        <div class="slack-signin">
          <a href="/auth/slack"><img src="https://api.slack.com/img/sign_in_with_slack.png" /></a>
        </div>
        <br>
        <div>
          <a href="/auth/google"><img src="/images/btn_google_signin_dark_pressed_web.png" /></a>
        </div>
      </div>
    </div>
  </div>
</div>